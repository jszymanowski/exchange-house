{
  "files.exclude": {
    "**/.venv": true,
    "**/__pycache__": true,
    "**/htmlcov": true,
    "**/.coverage": true,
    "**/mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true
  },
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.formatOnSave": true
}
